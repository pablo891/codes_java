package atividade01;

public class Conta {

	private int numero;
	private Cliente titular;
	private int senha;
	private double saldo;
	
	public Conta(int numero, Cliente titular, int senha, double saldo) {
		this.numero = numero;
		this.titular = titular;
		this.senha = senha;
		this.saldo = saldo;
	}
	
	public int getNumero() {
		return this.numero;
	}
	
	public Cliente getTitular() {
		return this.titular;
	}
	
	public void setTitular(Cliente titular) {
		this.titular = titular;
	}

	public double verificaSaldo(int senha) {
		if(senhaEhCorreta(senha)) {
			return this.saldo;
		}
		return -1;
	}
	
	public boolean creditaValor(double valor) {
		if(valor >= 0) {
			this.saldo += valor;
			return true;
		}
		return false;
	}
	
	public boolean debitaValor(double valor, int senha) {
		if(valor > 0 && this.senhaEhCorreta(senha) && this.saldo >= valor) {
			this.saldo -= valor;
			return true;
		}
		return false;
	}
	
	private boolean senhaEhCorreta(int senha) {
		return this.senha == senha;
	}
	
	public String toString() {
		return "Conta n√∫mero: " + this.numero +
				"\nTitular: " + titular.getNome() +
				"\nSaldo: " + this.saldo;
	}
	
	public boolean equals(Object o) {
		if(!(o instanceof Conta)) {
			return false;
		}
		
		Conta outra = (Conta) o;
		
		if(this.numero == outra.getNumero() &&
			this.titular.equals(outra.getTitular())){
			return true;
		}
		
		return false;
		
	}
	
}