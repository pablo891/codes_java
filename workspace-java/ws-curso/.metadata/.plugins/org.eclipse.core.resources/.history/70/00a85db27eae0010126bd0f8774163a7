package application;

import java.util.ArrayList;
import java.util.List;

public class Program {

	public static void main(String[] args) {
		
		List <String> list = new ArrayList <>();
		
		list.add("Maria");
		list.add("Alex");
		list.add("Bob");
		list.add("Anna");
		list.add(2, "Pablo"); //Adionando elementos à lista e indicando a posição
		
		
		System.out.println(list.size()); // Verificando tamanho da lista
		
		list.remove(0);
		
		for(String x : list) {
			System.out.println(x);
		}
	}

}
